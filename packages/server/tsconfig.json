{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "lib": ["ES6"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES6",
    "moduleResolution": "node",
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "pretty": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}
