{
  "name": "server",
  "version": "1.0.0",
  "main": "./build/index.js",
  "repository": "git@github.com:zoltan-nz/koa-ts-passport-demo.git",
  "author": "Zoltan",
  "license": "MIT",
  "engines": {
    "node": ">= 7.6"
  },
  "scripts": {
    "rm": "rimraf build .nyc_output coverage",
    "lint": "tslint --force --fix --type-check \"./src/**/*.ts\" \"./test/**/*.ts\"",
    "build": "tsc --pretty",
    "test": "yarn run lint && NODE_ENV=test mocha",
    "test:coverage": "yarn run rm && nyc yarn build && nyc yarn test && open coverage/index.html",
    "prepare": "yarn test",
    "watch:build": "yarn build -- --watch",
    "watch:test": "NODE_ENV=test yarn test -- --watch",
    "watch:server": "NODE_ENV=development DEBUG=* nodemon --watch build ./build/index.js"
  },
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/chai-http": "^0.0.30",
    "@types/http-status": "^0.2.29",
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.23",
    "@types/koa-compress": "^2.0.6",
    "@types/koa-passport": "^2.0.4",
    "@types/koa-router": "next",
    "@types/koa-send": "^3.3.0",
    "@types/koa-session-minimal": "^3.0.4",
    "@types/koa-static": "^2.0.22",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.8",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "coveralls": "^2.12.0",
    "http-status": "^1.0.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "ts-node": "^2.1.0",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1"
  },
  "dependencies": {
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-passport": "3",
    "koa-router": "next",
    "koa-send": "^3.3.0",
    "koa-session-minimal": "^3.0.3",
    "koa-static": "^3.0.0"
  }
}
